doctype html5
html
	head 
		if post
			title #{title} | #{post.header}
		title #{title}
		//- link(rel='stylesheet', href='http://bootswatch.com/darkly/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		if post
			link(rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.4/styles/default.min.css")
			script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
			script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.4/highlight.min.js")
		if jumbotron
			link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet")
		script(src='/javascripts/index.js')
	body
		nav
			.container
				.navbar-header
					h1
						a(href='/') Seaman Blog
				.navbar-body
					ul
						each page in navLinks
							li
								a(href = page.url) #{page.name}
	if jumbotron
		.jumbotron
			.container
				h1 Seaman Blog
				p  Lorem ipsum dolor sit amet, consectetur adipisicing elit. 
					|Ipsum fugit officia ratione distinctio numquam minima aspernatur, 
					|quaerat! Odio, voluptate, et!  Lorem ipsum dolor sit amet, consectetur 
					|adipisicing elit. Quae eligendi reiciendis incidunt, optio magnam laboriosam 
					|officia reprehenderit corrupti tempore! Officiis.
				ul.social_icons
					li
						a(href='#')
							i.fa.fa-github.fa-3x.fa-inverse
					li
						a(href='#')
							i.fa.fa-skype.fa-3x.fa-inverse
					li
						a(href='#')
							i.fa.fa-twitter.fa-3x.fa-inverse
	.content
		block content